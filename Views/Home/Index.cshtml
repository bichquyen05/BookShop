@model List<Book>
@{

}
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="img/categories/vanhoc.JPG">
                        <h5><a href="#">Văn học</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="img/categories/tamly.JPG">
                        <h5><a href="#">Tâm lý</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="img/categories/khoahoc.JPG">
                        <h5><a href="#">Khoa học</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="img/categories/ngontinh.JPG">
                        <h5><a href="#">Ngôn tình</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="img/categories/trinhtham.JPG">
                        <h5><a href="#">Trinh thám</a></h5>
                    </div>
                
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="img/categories/yhoc.JPG">
                        <h5><a href="#">Y học</a></h5>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="img/categories/kinhte.JPG">
                        <h5><a href="#">Kinh tế</a></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>SÁCH NỔI BẬT</h2>
                </div>                
            </div>
        </div>
        <div class="row featured__filter">
            @if (ViewData["FeaturedProducts"] != null)
            {
                var featuredProducts = ViewData["FeaturedProducts"] as List<Book>;
                @foreach (var item in featuredProducts)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg=@Url.Content("../Books/" + item.Image)>
                                <ul class="featured__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                    <li><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" asp-route-qty="1"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a asp-controller="Shop" asp-action="BookDetail" asp-route-id="@item.Id">@item.Name</a></h6>
                                <h5>@String.Format("{0:0,0}", item.UnitPrice) đ</h5>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="section-title">
            <a asp-controller="Shop" asp-action="Shop" asp-route-sortOption="0" class="primary-btn">Xem tất cả</a>

        </div>
    </div>
</section>
<!-- Featured Section End -->
<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="img/banner/banner-1.JPG" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="img/banner/banner-2.JPG" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner End -->
<!-- Latest Product Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>GỢI Ý HÔM NAY</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @if (ViewData["LatestProducts"] != null)
            {
                var latestProducts = ViewData["LatestProducts"] as List<Book>;
                @foreach (var item in latestProducts)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg=@Url.Content("../Books/" + item.Image)>
                                <ul class="featured__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                    <li><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" asp-route-qty="1"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a asp-controller="Shop" asp-action="BookDetail" asp-route-id="@item.Id">@item.Name</a></h6>
                                <h5>@String.Format("{0:0,0}", item.UnitPrice) đ</h5>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="section-title">
            <a href="~/Shop/Shop" class="primary-btn">Xem tất cả</a>
        </div>
    </div>    
</section>
<!-- Latest Product Section End -->