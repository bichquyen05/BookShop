@model IEnumerable<BookShop.Models.Book>

@{
    ViewData["Title"] = "ListBook";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<p>
    <a type="button" asp-action="Create" class="btn btn-outline-primary btn-icon-text">
        <i class="mdi mdi-plus-circle-outline"></i> Create New
    </a>
</p>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List Book</h4>            
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Image)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Author)
                            </th>                          
                            <th>
                                @Html.DisplayNameFor(model => model.UnitPrice)
                            </th>                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/Books/@Html.DisplayFor(modelItem => item.Image)" alt="ImageBook">
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author)
                                </td>                                   
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitPrice)
                                </td>
                                                                        
                                <td>                                        
                                    <a type="button" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success btn-icon-text">
                                        <i class="mdi mdi-alert btn-icon-prepend"></i> Details
                                    </a>
                                    <a type="button" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-icon-text">
                                        <i class="mdi mdi-delete-forever"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>